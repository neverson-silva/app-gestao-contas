{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@routes/*": ["src/routes/*"],
      "@contexts/*": ["src/contexts/*"],
      "@models/*": ["src/models/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src/**/*", "./App.tsx"]
}
